<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/dialog_index_crate_password_group_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/index_create_password_group_dialog_title"/>

        <EditText
            android:id="@+id/dialog_index_crate_password_group_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dialog_index_crate_password_group_title"
            android:hint="@string/index_create_password_group_dialog_hint"/>

        <com.wsr.layout.LayoutCheckboxWithText
            android:id="@+id/dialog_index_crate_password_group_check_box"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:text="@{@string/index_create_password_group_dialog_checkbox_text}"
            app:layout_constraintTop_toBottomOf="@id/dialog_index_crate_password_group_edit_text"/>

        <Button
            android:id="@+id/dialog_index_create_password_group_cancel_button"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_index_crate_password_group_check_box"
            app:layout_constraintEnd_toStartOf="@id/dialog_index_crate_password_group_positive_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/index_create_password_group_dialog_negative_button"/>

        <Button
            android:id="@+id/dialog_index_crate_password_group_positive_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_index_crate_password_group_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/index_create_password_group_dialog_positive_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
